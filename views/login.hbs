                <h1>Register</h1>
        
                <div class="txtb">
                    <input type="text" id="name">
                    <span data-placeholder="Name"></span>
                  </div>

                <div class="txtb">
                  <input type="text" id="username">
                  <span data-placeholder="Username"></span>
                </div>
        
                <div class="txtb">
                  <input type="password" id="password">
                  <span data-placeholder="Password"></span>
                </div>
        
                <div class="txtb">
                    <input type="date" >
                    <span data-placeholder="Date"></span>
                </div>

                <div class="txtb">
                    <input type="text" id="mobileNo">
                    <span data-placeholder="Mobile No."></span>
                </div>

                <button type="submit" class="logbtn" value="Register">
        
                <div class="bottom-text">
                  Already have an account? <a id="reg-toggle" href="#">Login.</a>
                </div>
        
              </form>
        </div>
    </div>

